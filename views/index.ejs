<% layout("/layouts/boilerplate") %>
<%=success %>
<%=error %>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Annadata</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss/dist/tailwind.min.css">
    <link rel="stylesheet" href="/output.css">
    <script type="text/javascript" src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
</head>



<div class="relative h-80">
    <img src="image.jpg" alt="Background Image" class="absolute inset-0 w-full h-full object-cover">
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <h1 class="text-5xl text-white font-bold absolute inset-0 flex items-center justify-center">Annadata</h1>
</div>



        <main class="flex-grow bg-gray-100 p-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="bg-white shadow-lg rounded-lg p-6 transform hover:scale-105 transition-all duration-300">
                    <h2 class="text-lg font-bold mb-4">Schemes</h2>
                    <p class="text-gray-600">Explore the latest government schemes for farmers.</p>
                    <a href="/annadata/schemes" class="text-blue-500 hover:text-blue-700 mt-4 inline-block">Learn More</a>
                </div>

                <div class="bg-white shadow-lg rounded-lg p-6 transform hover:scale-105 transition-all duration-300">
                    <h2 class="text-lg font-bold mb-4">Community Forum</h2>
                    <p class="text-gray-600">Connect with other farmers and share best practices.</p>
                    <% if (currentUser && currentUser._id) { %>
                        <!-- If a user is logged in and has an _id, display a link to the forum page -->
                        <a href="/annadata/<%= currentUser._id.toHexString() %>/forums" class="text-blue-500 hover:text-blue-700 mt-4 inline-block">Explore</a>
                    <% } else { %>
                        <!-- If no user is logged in or currentUser doesn't have an _id, display a generic message or link -->
                        <a href="/annadata/userid/forums" class="text-blue-500 hover:text-blue-700 mt-4 inline-block">Explore</a>
                    <% } %>
                    
                </div>

                <div class="bg-white shadow-lg rounded-lg p-6 transform hover:scale-105 transition-all duration-300">
                    <h2 class="text-lg font-bold mb-4">Weather Forecast</h2>
                    <p class="text-gray-600">Get the latest weather updates for your area.</p>
                    <a href="#" class="text-blue-500 hover:text-blue-700 mt-4 inline-block">Check Forecast</a>
                </div>
            </div>
        </main>

    
    </div>
    <!-- <script src="script.js"></script> -->
</body>

</html>