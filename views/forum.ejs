            <h1>Create a Post</h1>
            <label for="postTitle">Post Title:</label>
            <input type="text" id="postTitle" name="title" placeholder="Enter post title">
    
            <label for="postContent">Post Content (50 words):</label>
            <textarea id="postContent" name="message" placeholder="Enter post content"></textarea>
    
