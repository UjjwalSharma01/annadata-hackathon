<% layout("/layouts/boilerplate") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <title>Forum</title>
    
</head>
<style></style>
<body>
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mt-2 mb-2">
            <h2>Latest posts </h2>
            <div>
                <form action="/annadata/<%= currentUser._id.toHexString() %>/ask">
                    <div class="form-text">Have something to ask?</div>
                    <button class="btn btn-success">Post a question</button>
                </form>
            </div>
        </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(post of allPost){ %>
                <div class="col">
                    <div class="card mb-3">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div class="flex-grow-1"> <!-- Ensure proper separation and alignment -->
                                <div>
                                    <span class="font-weight-bold">Username: </span><%= post.author.username %>
                                </div>
                                <div>
                                    <span class="font-weight-bold">Category: </span><%= post.Category %>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-3">
                            <h5 class="card-subtitle mb-2 text-muted">Question: <%= post.Question %></h5>
                            <p class="card-text"><%= post.Description.substring(0, 100) %>...</p> <!-- Truncate description -->
                            <a href="" class="btn btn-sm btn-primary">Read More</a> <!-- Option to expand description -->
                        </div>
                        <div class="card-footer text-muted">
                             Posted on <%= post.createdAt.toLocaleDateString() %> at <%= post.createdAt.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                        </div>
                    </div>
                </div>
            <% }; %>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
